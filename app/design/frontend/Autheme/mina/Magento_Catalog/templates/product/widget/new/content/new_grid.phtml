            if (owlSelector !== undefined) {
                owlSelector.each(function () {
                    var option = {
                        items : 3,
                        margin : 0,
                        loop : false,
                        center : false,
                        mousedrag : true,
                        touchdrag : true,
                        pulldrag : true,
